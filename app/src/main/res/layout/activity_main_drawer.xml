<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_whilebild">

    <com.frank.living.widget.IjkVideoView
        android:id="@+id/main_drawer_ijkOne"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/main_drawer_imgOne"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@+id/main_drawer_ijkOne"
        app:layout_constraintBottom_toBottomOf="@+id/main_drawer_ijkOne"
        app:layout_constraintLeft_toLeftOf="@+id/main_drawer_ijkOne"
        app:layout_constraintRight_toRightOf="@+id/main_drawer_ijkOne"
        android:background="@mipmap/img_smallvideo_back"/>

    <com.frank.living.widget.IjkVideoView
        android:id="@+id/main_drawer_ijkTwo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/main_drawer_ijkOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/main_drawer_imgTwo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@+id/main_drawer_ijkTwo"
        app:layout_constraintBottom_toBottomOf="@+id/main_drawer_ijkTwo"
        app:layout_constraintLeft_toLeftOf="@+id/main_drawer_ijkTwo"
        app:layout_constraintRight_toRightOf="@+id/main_drawer_ijkTwo"
        android:background="@mipmap/img_smallvideo_back"/>

    <com.frank.living.widget.IjkVideoView
        android:id="@+id/main_drawer_ijkThree"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/main_drawer_ijkTwo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/main_drawer_imgThree"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@+id/main_drawer_ijkThree"
        app:layout_constraintBottom_toBottomOf="@+id/main_drawer_ijkThree"
        app:layout_constraintLeft_toLeftOf="@+id/main_drawer_ijkThree"
        app:layout_constraintRight_toRightOf="@+id/main_drawer_ijkThree"
        android:background="@mipmap/img_smallvideo_back"/>


    <ImageView
        android:id="@+id/main_drawer_btnHangup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/img_jujue"/>

</androidx.constraintlayout.widget.ConstraintLayout>