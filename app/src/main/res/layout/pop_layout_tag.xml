<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_layout">

    <Button
        android:id="@+id/pop_btn_circle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_btn_circle"/>

    <Button
        android:id="@+id/pop_btn_curve"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_btn_quxian"/>


    <Button
        android:id="@+id/pop_btn_arrows"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_btn_arrows"/>

    <Button
        android:id="@+id/pop_btn_reactange"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_btn_reactance"/>



</LinearLayout>